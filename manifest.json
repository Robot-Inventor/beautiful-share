{
    "manifest_version": 2,
    "name": "Beautiful Share",
    "short_name": "BShare",
    "version": "1.0.2.2",
    "description": "An extension to generate text for sharing on SNS based on OGP data.",
    "icons": {
        "16": "image/icon16.png",
        "48": "image/icon48.png",
        "128": "image/icon128.png"
    },
    "background": {
        "scripts": [
            "dist/background.js"
        ]
    },
    "permissions": [
        "clipboardWrite",
        "activeTab"
    ],
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "16": "image/icon16.png",
            "48": "image/icon48.png",
            "128": "image/icon128.png"
        },
        "default_title": "Beautiful Share"
    }
}